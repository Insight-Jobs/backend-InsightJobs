					"script": {
						"exec": [
							"// Este script roda automaticamente quando o login dá certo",
							"var jsonData = pm.response.json();",
							"",
							"if (jsonData.token) {",
							"    // Salva o token automaticamente nas variáveis da coleção",
							"    pm.collectionVariables.set(\"token\", jsonData.token);",
							"    console.log(\"Token salvo automaticamente: \" + jsonData.token);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
